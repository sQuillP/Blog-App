<%-include('partials/header')-%>
<!--Create a blog page -->
<div class='container container-fluid mt-5'>
	<form action='/blogs' method='POST'>
		<div class='row justify-content-center'>
			<div class='col-6'>
				<h1 style='text-align:center;'>
					Create a new blog
				</h1>
				<div class = 'form-group'>
					<p>Title</p>
					<input name='blog[title]' type='text' class='form-control'>
				</div>	
			</div>
		</div>
		<div class='row justify-content-center'>
			<div class='col-6'>
				<div class='form-group'>
					<p>Image url</p>
					<input name='blog[image]' type='text' class='form-control'>
				</div>
			</div>
		</div>
		<div class='row justify-content-center'>
			<div class='col-6'>
				<div class='form-group'>
					<p>Caption</p>
					<input name='blog[caption]' type='text' class='form-control'>
				</div>
			</div>
		</div>
		<div class='row justify-content-center'>
			<div class='col-6'>
				<div class='form-group'>
					<p>Description</p>
					<textarea name='blog[content]' class='form-control'></textarea>
				</div>
			</div>
		</div>
		<!-- 	There should be a css styesheet later for the styles appled to the tags	 -->
		<div class='d-flex flex-row justify-content-center mb-5'>
			<div>
				<button class='btn btn-success btn-sm' href='/blogs'>Create blog</button>
			</div>
    </form>
			<div>
				<a class='btn btn-sm btn-warning ml-2' href='/blogs'><i class="fas fa-backward"></i> Go back</a>
			</div>
		</div>
</div>

<%-include('partials/footer')-%>